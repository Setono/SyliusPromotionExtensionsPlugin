{
    "name": "setono/sylius-promotion-extensions-plugin",
    "type": "sylius-plugin",
    "description": "Common promotion extensions for Sylius",
    "keywords": [
        "sylius",
        "sylius-plugin"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "sylius/sylius": "^1.3"
    },
    "conflict": {
        "symfony/doctrine-bridge": "4.3.0"
    },
    "require-dev": {
        "localheinz/composer-normalize": "^1.1",
        "phpspec/phpspec": "^5.0",
        "phpstan/phpstan-doctrine": "^0.10",
        "phpstan/phpstan-shim": "^0.12",
        "phpstan/phpstan-symfony": "^0.10",
        "phpstan/phpstan-webmozart-assert": "^0.10",
        "phpunit/phpunit": "^7.0",
        "roave/security-advisories": "dev-master",
        "sensiolabs/security-checker": "^5.0",
        "sylius-labs/coding-standard": "^2.0",
        "symfony/browser-kit": "^3.4 || ^4.1",
        "symfony/debug-bundle": "^3.4 || ^4.1",
        "symfony/dotenv": "^3.4 || ^4.1",
        "symfony/intl": "^3.4 || ^4.1",
        "symfony/web-profiler-bundle": "^3.4 || ^4.1",
        "symfony/web-server-bundle": "^3.4 || ^4.1"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\SyliusPromotionExtensionsPlugin\\": "src/",
            "Tests\\Setono\\SyliusPromotionExtensionsPlugin\\": "tests/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": [
            "@ensure-test-container-exists",
            "./vendor/bin/phpstan analyse -c phpstan.neon -l max src"
        ],
        "check-style": "vendor/bin/ecs check --ansi spec src",
        "ensure-test-container-exists": "[[ -f tests/Application/var/cache/test/ApplicationTests_Setono_SyliusPromotionExtensionsPlugin_Application_KernelTestDebugContainer.xml ]] || (cd tests/Application && php -d memory_limit=-1 bin/console cache:clear --env=test)",
        "fix-style": "vendor/bin/ecs check --ansi spec src --fix",
        "phpspec": "vendor/bin/phpspec run --ansi",
        "phpunit": "vendor/bin/phpunit",
        "test": [
            "@phpunit",
            "@phpspec"
        ]
    }
}
